<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:textSize="1sp" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black"/>
            <corners android:radius="100dp"/>
            <stroke android:width="1dp" android:color="#8c8c8c"/>
            <size android:height="20dp" android:width="100dp"/>


        </shape>
    </item>

    <item android:textSize="1sp" android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black"/>
            <corners android:radius="100dp"/>
            <stroke android:width="1dp" android:color="#8c8c8c"/>
            <size android:height="20dp" android:width="30dp"/>
        </shape>
    </item>

</selector>