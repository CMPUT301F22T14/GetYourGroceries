<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:textSize="1sp" android:state_checked="true">
        <shape android:shape= "oval">
            <solid android:color="#484b4f"/>
            <stroke android:width="1dp" android:color="#34c759"/>
            <size android:width="20dp" android:height="20dp"/>
        </shape>
    </item>

    <item android:textSize="1sp" android:state_checked="false">
        <shape android:shape= "oval">
            <solid android:color="#484b4f"/>
            <stroke android:width="1dp" android:color="#8c8c8c"/>
            <size android:width="32dp" android:height="32dp"/>
        </shape>
    </item>


</selector>