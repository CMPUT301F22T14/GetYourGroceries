<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/change_recipe_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/change_recipe_name_til"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:textColorHint="@color/white"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:hintTextColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/change_recipe_prep_time_til"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/change_recipe_name"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:autofillHints=""
            android:background="@drawable/edittext"
            android:ems="10"
            android:hint="Name:"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/change_recipe_prep_time_til"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:textColorHint="@color/white"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintTextColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/change_recipe_servings_til"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_recipe_name_til">

        <EditText
            android:id="@+id/change_recipe_prep_time"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:autofillHints=""
            android:background="@drawable/edittext"
            android:ems="10"
            android:hint="Preparation Prep Time (min):"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/change_recipe_servings_til"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/change_recipe_category_til"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_recipe_prep_time_til">

        <EditText
            android:id="@+id/change_recipe_servings"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:autofillHints=""
            android:background="@drawable/edittext"
            android:ems="10"
            android:hint="Number of Servings:"
            android:inputType="number"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/change_recipe_category_til"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/change_recipe_comments_til"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_recipe_servings_til">

        <Spinner
            android:id="@+id/change_recipe_category"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:autofillHints=""
            android:background="@drawable/edittext"
            android:contentDescription="Enter a Category:"
            android:ems="10"
            android:popupBackground="@color/black"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/change_recipe_comments_til"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:textColorHint="@color/white"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintBottom_toTopOf="@+id/change_recipe_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_recipe_category_til">


        <EditText
            android:id="@+id/change_recipe_comments"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:autofillHints=""
            android:background="@drawable/edittext"
            android:ems="10"
            android:hint="Comments: "
            android:inputType="textMultiLine"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20sp" />


    </com.google.android.material.textfield.TextInputLayout>

    <ListView
        android:id="@+id/add_ingredients_recipe"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_recipe_comments_til" />

    <Button
        android:id="@+id/add_ingredient_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/black"
        android:text="@string/add_ingredient"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_ingredients_recipe" />

    <Button
        android:id="@+id/change_recipe_confirm"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/black"
        android:text="@string/confirm"
        android:textColor="@color/accent"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_ingredient_btn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="2dp"
        android:text="@string/ingredients_header"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/add_ingredients_recipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/change_recipe_comments_til" />


</androidx.constraintlayout.widget.ConstraintLayout>