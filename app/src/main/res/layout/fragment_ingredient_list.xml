<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <Button
        android:id="@+id/addIngredientButton"
        android:layout_width="177dp"
        android:layout_height="52dp"
        android:backgroundTint="@color/black"
        android:text="@string/change_ingredient"
        android:textColor="#00FFD1"
        app:cornerRadius="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort by: "
            android:layout_gravity="center_vertical"/>
        <Spinner
            android:id="@+id/sortIngredientSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ingredient_spinner"
            android:dropDownWidth="100dp"
            android:dropDownVerticalOffset="27dp"
            android:popupBackground="@drawable/ingredient_spinner_dropdown"
            android:spinnerMode="dropdown"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sortingSwitchIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Asc"
            android:textOn="Desc"
            android:textSize="1sp"
            android:thumb="@drawable/ingredient_sorting_switch_thumb"
            app:showText="true"
            app:track="@drawable/ingredient_sorting_switch_track" />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

    </LinearLayout>


    <ListView
        android:id="@+id/ingredientListView"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_margin="20dp"
        android:divider="@drawable/space_divider"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="70sp"
        android:showDividers="middle">


    </ListView>
</LinearLayout>